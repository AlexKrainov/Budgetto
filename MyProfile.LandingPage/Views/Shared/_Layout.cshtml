<!DOCTYPE html>

<!-- Add landing-1 to html element -->
<html lang="en" class="landing-1 light-style">
<head>
    <title>Budgetto.org</title>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Icon fonts -->
    <link rel="stylesheet" href="vendor/fonts/ionicons.css">
    <link rel="stylesheet" href="vendor/fonts/linearicons.css">
    <style>
        [v-cloak] {
            display: none;
        }
    </style>

    <!-- Core stylesheets -->
    <link rel="stylesheet" href="vendor/css/rtl/bootstrap.css" class="theme-settings-bootstrap-css">
    <link rel="stylesheet" href="vendor/css/rtl/appwork.css" class="theme-settings-appwork-css">
    <link rel="stylesheet" href="vendor/css/rtl/theme-corporate.css" class="theme-settings-theme-css">
    <link rel="stylesheet" href="vendor/css/rtl/colors.css" class="theme-settings-colors-css">
    <link rel="stylesheet" href="vendor/css/rtl/uikit.css">

    <script src="vendor/js/material-ripple.js"></script>
    <script src="vendor/js/layout-helpers.js"></script>

    <!-- Theme settings -->
    <!-- This file MUST be included after core stylesheets and layout-helpers.js in the <head> section -->
    <script src="vendor/js/theme-settings.js"></script>
    <script>
        window.themeSettings = new ThemeSettings({
            cssPath: 'vendor/css/rtl/',
            themesPath: 'vendor/css/rtl/'
        });
    </script>

    <!-- Core scripts -->
    <script src="vendor/js/pace.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Page -->
    <link rel="stylesheet" href="css/landing.css">

    <!-- Libs -->
    <link rel="stylesheet" href="vendor/libs/swiper/swiper.css">
    <link rel="stylesheet" href="vendor/libs/plyr/plyr.css">
    @RenderSection("Styles", required: false)
</head>

<body>
    <div id="page-vue" class="theme-bg-white" v-cloak>


        <div class="page-loader">
            <div class="bg-primary"></div>
        </div>

        <!-- Navbar -->
        <nav class="landing-navbar navbar navbar-expand-lg navbar-light fixed-top pt-lg-4">
            <div class="container-fluid px-3">
                <a href="javascript:void(0)" class="navbar-brand text-big font-weight-bolder line-height-1 text-expanded py-3">
                    <img src="~/img/Logo-min.png" style="width: 180px;" />
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#landing-navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="landing-navbar-collapse">
                    <div class="navbar-nav align-items-lg-center ml-auto">
                        <a class="nav-item nav-link" href="javascript:void(0)" v-on:click="go_to('#how-it-works')">Как работает сервис</a>
                        <a class="nav-item nav-link" href="javascript:void(0)" v-on:onclick="go_to('#pricing')">Цены</a>
                        <div class="nav-item py-3 py-lg-0 ml-lg-4">
                            <a href="javascript:void(0)" class="btn btn-primary rounded-pill text-expanded"
                               onclick="PageVue.goToAppBudgetto('HeaderButton')">
                                <small>Войти</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- / Navbar -->
        @RenderBody()

        <!-- Layout footer -->
        <nav class="layout-footer footer bg-footer-theme">
            <div class="container-fluid d-flex flex-wrap justify-content-between  container-p-x pb-3">
                <div class="pt-3">
                    Разработка сайта by
                    <img src="~/img/raynovgroup-logo.ico" class="ui-w-20" />
                    <a href="https://www.raynovgroup.com" target="_blank" class="footer-text font-weight-bolder text-decoration-hover">RaynovGroup</a> ©
                </div>
                <div class="pt-3">
                    @*<a class="text-twitter text-big" href="javascript:void(0)">
                            <i class="ion ion-logo-twitter"></i>
                        </a>
                        &nbsp; &nbsp;
                        <a class="text-facebook text-big" href="javascript:void(0)">
                            <i class="ion ion-logo-facebook"></i>
                        </a>
                        &nbsp; &nbsp;*@
                    <a class="text-instagram text-big" href="javascript:void(0)">
                        <i class="ion ion-logo-instagram"></i>
                    </a>
                    <a href="mailto:support@budgetto.org?subject=Предложение по сайту app.budgetto.org" target="_blank" class="footer-link ml-4">
                        support@budgetto.org
                    </a>
                </div>
            </div>
            <div class="container-fluid d-flex flex-wrap justify-content-between container-p-x pb-3">
                <div class="pt-1">
                    <a href="~/documents/personal_data_processing_policy.pdf" target="_blank" class="footer-link mr-4"
                       onclick="ShowDocument('personal_data_processing_policy')">Политика конфиденциальности</a>
                    <a href="~/documents/terms_of_use.pdf" target="_blank" class="footer-link mr-4"
                       onclick="ShowDocument('terms_of_use')">Пользовательское соглашение</a>
                </div>
                <div class="pt-1">© 2020 Управление финансами Budgetto.org</div>
            </div>
        </nav>
    </div>
    <!-- Core scripts -->
    <script src="vendor/libs/popper/popper.js"></script>
    <script src="vendor/js/bootstrap.js"></script>

    <!-- Libs -->
    <script src="vendor/libs/swiper/swiper.js"></script>

    <!-- Page -->
    <script src="vendor/js/landing.js"></script>
    <script src="~/vendor/libs/lettering/lettering.min.js" asp-append-version="true"></script>
    <script src="~/vendor/libs/textillate/textillate.min.js" asp-append-version="true"></script>
    <script src="~/vendor/libs/vue/dist/vue.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
