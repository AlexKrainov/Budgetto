<hr class="container-m-nx border-light my-0">
<article id="help-vue">

    <div class="row row-bordered my-4">
        <div class="col-6 col-sm-4 col-md-3 col-lg-4 col-xl-3"
             v-for="menu in menus"
             v-show="menu.articles.length > 0 ">
            <a href="javascript:void(0)" class="card card-hover text-body my-2"
               v-bind:title="menu.title">
                <div class="card-body text-center py-5">
                    <div class="display-3 text-primary"
                         v-bind:class="menu.icon"></div>
                    <h5 class="m-0 mt-3">{{ menu.title }}</h5>
                </div>
            </a>
        </div>
    </div>
    <hr class="container-m-nx border-light my-0">

    <div class="card mt-5" v-for="menu in menus"
         v-show="menu.articles.length > 0 ">
        <h5 class="card-header py-4 px-5">{{ menu.title }}</h5>
        <div class="row no-gutters row-bordered">
            <div class="col-md-6 p-5">
                <a class="d-block mb-3"
                   v-for="article in menu.articles"
                   v-bind:href="'/Help/Center/ViewArticle?id=' + article.id">
                    <i class="ion ion-ios-arrow-forward"></i>&nbsp; {{ article.title }}
                </a>
            </div>

        </div>
    </div>
</article>