@{
	ViewData["Title"] = "Project list - Pages";
}

@section Scripts {
	<script src="~/app_js/template-list.js"></script>
}

<section id="template-list-vue">
	<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
		<div>Templates</div>
		<a href="/Template/Index" class="btn btn-primary rounded-pill d-block"><span class="ion ion-md-add"></span>&nbsp; Create template</a>
	</h4>

	<div class="row">
		<div class="col-sm-6 col-xl-4" v-for="template in templates">
			<div class="card mb-4">
				<div class="card-body d-flex justify-content-between align-items-start pb-3">
					<div>
						<a href="javascript:void(0)" class="text-body text-big font-weight-semibold">{{ template.name }}</a>
						<span class="badge badge-success align-text-bottom ml-1">{{ template.periodName }}</span>
						<div class="text-muted small mt-1">10 opened tasks, 5 tasks completed</div>
					</div>
					<div class="btn-group project-actions">
						<button type="button" class="btn btn-sm btn-default icon-btn borderless rounded-pill md-btn-flat dropdown-toggle hide-arrow" data-toggle="dropdown">
							<i class="ion ion-ios-more"></i>
						</button>
						<div class="dropdown-menu dropdown-menu-right">
							<a class="dropdown-item" v-bind:href="'/Template/Index/'+ template.id">Edit</a>
							<a class="dropdown-item" >Remove</a>
						</div>
					</div>
				</div>
				<div class="progress rounded-0" style="height: 3px;">
					<div class="progress-bar" style="width: 33%;"></div>
				</div>
				<div class="card-body small pt-2 pb-0">
					<strong>33%</strong> completed
				</div>
				<div class="card-body pb-3">
					Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque ac malesuada nisl. Maecenas quis ultrices tellus.
				</div>
				<div class="card-body pt-0">
					<div class="row">
						<div class="col">
							<div class="text-muted small">Created</div>
							<div class="font-weight-bold">{{ template.dateCreate }}</div>
						</div>
						<div class="col">
							<div class="text-muted small">Edit</div>
							<div class="font-weight-bold">{{ template.dateEdit }}</div>
						</div>
					</div>
				</div>
				<hr class="m-0">
				<div class="card-body py-3">
					<a class="btn btn-outline-success" v-bind:href="'/Template/Index/'+ template.id">Edit</a>
				</div>
			</div>
		</div>
	</div>
</section>