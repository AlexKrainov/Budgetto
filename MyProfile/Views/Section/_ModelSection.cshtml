<div class="modal fade" id="modal-section">
    <div class="modal-dialog">
        <form class="modal-content" method="post" v-on:submit="checkForm">
            <div class="modal-header">
                <h5 class="modal-title" v-show="section.id == undefined">
                    Содание категории
                </h5>
                <h5 class="modal-title" v-show="section.id">
                    Редактирование категории
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="btn-group m-4">
                <label class="btn" v-bind:class="section.sectionTypeID == 2 ? 'btn-danger' : 'btn-default'"
                       v-on:click="changeSectionType(2)">
                    Расходы
                </label>
                <label class="btn" v-bind:class="section.sectionTypeID == 1 ? 'btn-success' : 'btn-default'"
                       v-on:click="changeSectionType(1)">
                    Доходы
                </label>
            </div>
            <div class="modal-body pt-0">
                <div class="form-row">
                    <div class="form-group col">
                        <label class="form-label">Введите название категории</label>
                        <span class="text-danger">*</span>
                        <input type="text" class="form-control" placeholder="Продукты, книги ..." v-model="section.name">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col mb-0">
                        <label class="form-label">Введите описание категории </label>
                        <textarea class="form-control" v-model="section.description" placeholder=""></textarea>
                    </div>
                </div>
                <div class="form-row mt-3">
                    <div class="form-group col mb-0">
                        <label class="form-label">Выберите подходящий цвет для категории</label>
                        <div class="picker" id="cssColor"></div>
                        @*<input type="text" class="form-control" placeholder="DD / MM">*@
                    </div>
                </div>
                <div class="form-row mt-3" v-if="section.id">
                    <div class="form-group col mb-0">
                        <label class="form-label">Сменить область</label>
                        <select class="form-control" v-on:change="changeArea($event)">
                            <option v-for="area in areas" v-bind:value="area.id" v-bind:selected="area.id == section.areaID">{{ area.name }}</option>
                        </select>
                    </div>
                </div>
                @*<div class="form-row mt-3 ml-1">
                    <div class="form-group" style=" margin-left: 0px; margin-right: auto;">
                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" v-model="section.isShowInCollective">
                            <span class="custom-control-label">Показывать всей группе</span>
                        </label>
                    </div>
                </div>*@
                <div class="form-row mt-3 ml-1">
                    <div class="form-group" style=" margin-left: 0px; margin-right: auto;">
                        <label class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" v-model="section.isShowOnSite">
                            <span class="custom-control-label">Показывать везде на сайте</span>
                        </label>
                    </div>
                </div>
                <br />
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i v-bind:class="section.cssIcon" aria-hidden="true" style="font-size:large"></i></span>
                    </div>
                    <input type="text" class="form-control" placeholder="Icon" v-model="section.cssIcon">
                </div>
                <br />
                <div class="form-row" id="cssIcon">
                    <div class="input-group input-group-sm">
                        <input type="text" placeholder="Search" class="form-control" style="margin-left: 50%;" v-model="searchIcon">
                        <span class="form-group-btn">
                            <button type="button" class="btn btn-sm btn-white" v-on:click="searchIcon = '' " v-show="searchIcon != null && searchIcon != ''"> <i class="fa fa-times"></i></button>
                        </span>
                    </div>
                    <div class="form-group col mb-0">
                        <br />
                        <div class="infont col-md-5 col-sm-6 icon-box" v-for="icon in icons" v-show="icon.isShow" v-on:click="selectIcon(icon)">
                            <span>
                                <i v-bind:class="icon.nameClass" aria-hidden="true"></i> {{ icon.name }}
                            </span>
                        </div>
                        @*<input type="text" class="form-control" placeholder="DD / MM">*@
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button class="btn btn-primary" type="submit"
                        v-bind:disabled="isSaving"
                        v-on:click="save">
                    <span class="spinner-border" role="status" aria-hidden="true" v-show="isSaving"></span>
                    Сохранить
                </button>
            </div>
        </form>
    </div>
</div>