<div class="col-sm-6 col-md-4 col-lg-6 col-xl-4 px-1 mb-2"
     v-for="goal in goalChartsData"
     v-show="goal.isShow">
    <div class="card custom-card-hover"
         v-bind:id="'goal_' + goal.id"
         v-if="goal.isDeleted == false">
        <div class="card-body pb-0">
            <div class="d-inline-flex  align-items-center">
                <i class="lnr lnr-rocket text-primary float-left" style="font-size: x-large;"></i>
                <strong class="pl-2">{{ goal.name }}</strong>
            </div>
            <div class="card-header-elements ml-auto float-right" style="margin-top: -20px; margin-right: -31px;">
                <div class="btn-group mr-3">
                    <button type="button" class="btn btn-sm btn-default icon-btn borderless rounded-pill md-btn-flat dropdown-toggle hide-arrow" data-toggle="dropdown" aria-expanded="false">
                        <i class="ion ion-ios-more"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" id="sales-dropdown-menu" style="">
                        <a class="dropdown-item" href="javascript:void(0)"
                           v-on:click="addGoalMoney(goal)">Внести деньги</a>
                        <a class="dropdown-item" href="javascript:void(0)"
                           v-on:click="hideGoal(goal.id)">Скрыть с этой страницы</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body pt-2" style=" margin-top: 3px;">
            <div class="d-flex justify-content-between align-items-center small">
                <div class="font-weight-bold">{{ goal.percent }}%</div>
                <div class="text-muted">
                    {{ getCurrencyValue(goal.totalMoney) }} / {{ getCurrencyValue(goal.expectationMoney) }}
                </div>
            </div>
            <div class="progress mt-1" style="height: 3px;">
                <div class="progress-bar"
                     v-bind:class="goal.percent >= 100 ? 'bg-success': 'bg-warning'"
                     v-bind:style="'width: '+ goal.percent +'%;'"></div>
            </div>
        </div>
    </div>

</div>