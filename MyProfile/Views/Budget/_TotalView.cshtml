<div class="col-sm-6 col-xl-4" v-show="earningData.isShow">
	<div class="card mb-2">
		<div class="card-body d-flex justify-content-between align-items-center" style="height: 98px">
			<div>
				<div class="text-muted small">Доходы</div>
				<strong class="text-large font-weight-normal">{{ earningData.total }}</strong>
				<sup v-show="earningData.percent != 0 && earningData.isGood" class="text-success small">+ {{ earningData.percent }}%</sup>
				<sup v-show="earningData.percent != 0 && !earningData.isGood" class="text-danger small">- {{ earningData.percent }}%</sup>
			</div>
			<div class="w-45" style="height: 65px;">
				<canvas id="earningChart"></canvas>
			</div>
		</div>
	</div>
</div>
<div class="col-sm-6 col-xl-4" v-show="spendingData.isShow">
	<div class="card mb-2">
		<div class="card-body d-flex justify-content-between align-items-center" style="height: 98px">
			<div>
				<div class="text-muted small">Расходы</div>
				<strong class="text-large font-weight-normal">{{ spendingData.total }}</strong>
				<sup v-show="spendingData.percent != 0 && !spendingData.isGood" class="text-danger small">+ {{ spendingData.percent }}%</sup>
				<sup v-show="spendingData.percent != 0 && spendingData.isGood" class="text-success small">- {{ spendingData.percent }}%</sup>
			</div>
			<div class="w-45">
				<div style="height: 70px;">
					<canvas id="spendingChart"></canvas>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="col-sm-6 col-xl-4" v-show="investingData.isShow">
	<div class="card mb-2">
		<div class="card-body d-flex justify-content-between align-items-center" style="height: 98px">
			<div>
				<div class="text-muted small">Инвестиций</div>
				<strong class="text-large font-weight-normal">85 022,00 ₽</strong>
				<sup class="text-success small">+ 2%</sup>
			</div>
			<div class="w-50">
				<div style="height: 70px;">
					<canvas id="statistics-chart-5"></canvas>
				</div>
			</div>
		</div>
	</div>
</div>