@model MyProfile.Entity.ModelView.BudgetView.BudgetControllerModelView
@{
    ViewData["Title"] = "DataTables - Tables";
}

@section Styles {
    <link rel="stylesheet" href="~/vendor/libs/datatables/datatables.css">
    <link href="~/vendor/libs/flatpickr/plugins/monthSelect.css" rel="stylesheet" />
    <link href="~/vendor/libs/select2/select2.css" rel="stylesheet" />
}

@section Scripts {
    <!-- Dependencies -->
    <script src="~/vendor/libs/chartjs/chartjs.js"></script>
    <script src="~/vendor/libs/datatables/datatables.js"></script>
    <script src="~/vendor/libs/flatpickr/plugins/monthSelect.js"></script>
    <script src="~/vendor/libs/select2/select2.js"></script>

    <script src="~/pages/budget/_budget-month.js"></script>
    <script src="~/pages/budget/budget.js"></script>
    <script src="~/pages/budget/history-modal.js"></script>
    <script src="~/pages/reminder/budget-reminder-model.js"></script>
    <script src="~/pages/goal/goal-add-money.js"></script>
}

<div id="budget-vue" v-cloak>

    <input type="hidden" id="templateID_hidden" value="@Model.SelectedTemplateID" />
    <input type="hidden" id="budgetDate_hidden" value="@Model.SelectedDateTime.ToString("yyyy/MM/dd")" />

    <!-- Head block -->

    <div class="container-m-nx container-m-ny theme-bg-white container-p-x py-4 mb-0">

        <div class="row">
            <div class="col-md-4">
                <div class="form-group col">
                    <div class="input-group budget-date">
                        <span class="input-group-prepend" style=" width: 50px;">
                            <button v-on:click="changeView(-1)" class="btn btn-default modal-record-date-button" type="button" title="Минус 1 день"><i class="fa fa-angle-left font-size-large" aria-hidden="true"></i></button>
                        </span>
                        <input type="text" class="form-control text-center" id="budget-date" v-model="budgetDate" v-on:input="refresh(undefined)">
                        <span class="input-group-append" style=" width: 50px;">
                            <button v-on:click="changeView(1)" class="btn btn-default modal-record-date-button" type="button" title="Плюс 1 день"><i class="fa fa-angle-right font-size-large" aria-hidden="true"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h2 class="font-weight-light mb-2">Сегодня: <b>@DateTime.Now.ToString("dd.MM.yyyy")</b></h2>
                @*<div class="badge badge-success font-weight-bold"></div>*@
            </div>
            <div class="col-md-4">
                @*<button class="btn btn-lg btn-default" id="test">
                        <i class="ion ion-md-power text-danger"></i>&nbsp;
                        Shut Down
                    </button>*@
            </div>
        </div>
    </div>
    <!-- / Head block -->
    <hr class="container-m-nx border-light mt-0 mb-2">

    <div class="row total-view">
        @await Html.PartialAsync("_TotalView", MyProfile.Entity.Model.PeriodTypesEnum.Month)
    </div>
    <div class="row">
        @await Html.PartialAsync("_LimitsView")
    </div>
    <div class="row" id="goal-contrainer">
        @await Html.PartialAsync("_GoalsView")
    </div>
    <div class="row">
        @await Html.PartialAsync("_BigChartView", "/Budget/Month")
    </div>
    <div class="card table-container">
        <div class="card-body" style="padding-bottom:5px;">
            <div class="card-title with-elements templates-container">
                <select id="templates" v-model="templateID" style="width: 300px"
                        v-on:change="refresh('onlyTable')" class="form-control form-control-sm">
                    @foreach (var template in Model.Templates)
                    {
                        if (!template.IsDefault)
                        {
                            <option value="@template.ID">@template.Name</option>
                        }
                        else
                        {
                            <option value="@template.ID" selected>@template.Name</option>
                        }
                    }
                </select>
                <a class="ml-2 btn btn-outline-primary btn-xs icon-btn md-btn-flat" title="Редактировать шаблон"
                   v-bind:href="'/Template/Edit/'+template.id"
                   v-show="template && template.id">
                    <i class="ion ion-md-create"></i>
                </a>

                <div class="card-title-elements">
                </div>
                <div class="card-title-elements ml-md-auto" v-show="template && template.id">
                    <a data-toggle="collapse" href="#collapseFilter" class="d-block ml-3">
                        <i class="collapse-icon"></i>
                    </a>
                </div>
            </div>
            <div class="collapse table-responsive bg-light " id="collapseFilter" v-show="template && template.id">
                <div class="float-right">
                    <button type="button" class="btn icon-btn borderless my-2 btn-outline-primary mr-4"
                            v-on:click="toExcel"
                            v-bind:disabled="isGenerateExcel">
                        <i class="far fa-file-excel" title="Экспорт таблицы в excel "></i>
                    </button>
                    <button type="button" class="btn icon-btn borderless my-2"
                            v-bind:class="pageViewSettings.isTableViewCompact ? 'btn-outline-default': 'btn-outline-primary'"
                            v-on:click="pageViewSettings.isTableViewCompact = false; savePageSettings();">
                        <i class="ion ion-md-menu" title="Обычный вид таблицы"></i>
                    </button>
                    <button type="button" class="btn icon-btn borderless my-2 mr-2"
                            v-bind:class="pageViewSettings.isTableViewCompact ? 'btn-outline-primary': 'btn-outline-default'"
                            v-on:click="pageViewSettings.isTableViewCompact = true; savePageSettings();">
                        <i class="ion ion-md-reorder" title="Компактный вид таблицы"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-datatable table-responsive" style="padding: 0px 12px 8px 11px;">
            @await Html.PartialAsync("_TableView")
        </div>
    </div>

</div>

<div id="history-vue">
    @await Html.PartialAsync("_HistoryModal")
</div>
<div id="reminder-vue">
    @await Html.PartialAsync("../Reminder/_ReminderListModel.cshtml")
</div>
@await Html.PartialAsync("../Goal/_GoalAddMoney.cshtml")

@await Html.PartialAsync(@"../Settings/Settings.cshtml", "Budget/Month")
